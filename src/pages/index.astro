---
import BaseLayout from '../layouts/BaseLayout.astro';
import SubscribePopUp from "../components/react_components/SubscribePopUp";
import ClientSlider from "../components/ClientSlider.astro";
import SocialHref from "../components/SocialHref.astro";
import ReviewSlider from '../components/react_components/ReviewSlider'
import GetStartedPopUp from "../components/react_components/GetStartedPopUp";
import CardSlider from "../components/react_components/CardSlider";
import Vacancies from "../components/react_components/Vacancies";
import GreetingVideo from "../../public/videos/DesktopV_1compressed.mp4"
import GreetingVideoMobile from "../../public/videos/MobileV_1compressed.mp4"
import AboutUs from "../components/AboutUs.astro";
import VideoSection from "../components/VideoSection.astro";
import GetInTouch from "../components/react_components/GetInTouch"
import Portfolio from "../components/react_components/Portfolio";

---
<head>
    <link rel="preload" as="video" href={GreetingVideo} type="video/mp4" media="(min-width: 768px)"
          fetchpriority="high">
    <link rel="preload" as="video" href={GreetingVideoMobile} type="video/mp4" media="(max-width: 767px)"
          fetchpriority="high">
</head>
<BaseLayout title=" Personal Branding Services | LEADIN Agency"
            description=` Build your personal or company brand with LEADIN. We deliver tailored strategies, expert content creation, and brand positioning that elevates visibility and drives meaningful impact.`
>


    <section
            class="max-w-[1440px] mx-auto py-16 px-4 sm:px-6 lg:px-8 h-fit flex flex-row lg:gap-2 lg:flex-row bg-[#000] relative">
        <div class="flex lg:flex-row gap-5 flex-col w-full relative">
            <div class="hidden lg:block absolute top-0 bottom-0 left-[50%] w-[120px] z-10"
                 style="background: linear-gradient(90deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0.7) 40%, rgba(0,0,0,0) 100%);">

            </div>

            <div class="flex basis-1/2 flex-col font-bold gap-[30px] lg:gap-[50px] justify-end z-20">
                <div class="content mb-12 flex flex-col">
                    <span class="text-4xl md:text-[50px] lg:text-[60px] pb-[10px] ">BUILD YOUR</span>
                    <div>
                    <span class="text-5xl md:text-[65px] lg:text-[75px] relative">
                    PERSONAL
                     <span class="absolute text-[15px] md:text-[20px] lg:text-[25px] left-[96%] top-[32%]">CORPORATE</span>
                </span>
                    </div>
                    <span class="text-6xl md:text-[85px] lg:text-[100px]">BRAND</span>
                </div>

                <div class="font-bold flex gap-5 flex-row items-center">
                    <button class="py-2 rounded-[10px] text-[#FFF] text-md md:text-xl border-[#B19482] border-2 basis-1/2">
                        <a href="/services#headerInd">For Individuals</a></button>

                    <button class="py-2 rounded-[10px] text-[#FFF] text-md md:text-xl border-[#B19482] border-2 basis-1/2 ">
                        <a href="/services#headerCom">For Companies</a></button>
                </div>
            </div>

            <div class="basis-1/2  aspect-[1.63] flex justify-center z-0">
                <VideoSection videoBasePath={GreetingVideo} fallbackVideoBasePath={GreetingVideoMobile}/>
            </div>
        </div>
    </section>
    <AboutUs/>

    <section class=" bg-[#000] max-w-[1440px] mx-auto">
        <div class="flex flex-col items-center">
            <h1 class="sm:py-12 py-8 xl:text-5xl lg:text-4xl text-3xl font-bold my-10">OUR PORTFOLIO</h1>
            <Portfolio client:only="react"/>
        </div>
    </section>


    <!-- Branding cards-->
    <section class="cards-section max-w-[1440px] mx-auto py-6 px-4  bg-black py-14">
        <header class="text-center">
            <h2 class="sm:py-12 py-8 xl:text-5xl lg:text-4xl text-3xl font-bold mb-20 ">RESULT-BASED PERSONAL BRANDING</h2>
        </header>

        <CardSlider client:only="react"/>


    </section>
    <!--Our Services-->
    <section class="max-w-[1440px] mx-auto py-6 px-4 bg-[#000]">
        <header class="text-center">
            <h2 class="sm:pb-12 pb-8 font-bold xl:text-5xl lg:text-4xl text-3xl">OUR SERVICES</h2>
        </header>
        <div class="ourServices-conteiner grid  grid-cols-1 lg:grid-cols-3 sm:grid-cols-2 sm:gap-10 gap-5">
            <div class="ourServices  ">
                <h3 class="sm:text-2xl text-xl pb-4 ">Personal Brand Management</h3>
                <p class="text-[#D8D6D6] text-[16px] ">We help professionals build and maintain a strong, authentic
                    personal brand that resonates with their audience and drives meaningful impact.</p>
            </div>
            <div class="ourServices ">
                <h3 class="sm:text-2xl text-xl pb-4">Digital Marketing</h3>
                <p class="text-[#D8D6D6] text-[16px]">We manage social media, run PPC ads, and design marketing
                    campaigns that amplify your online presence and achieve measurable results.</p>
            </div>
            <div class="ourServices">
                <h3 class="sm:text-2xl text-xl pb-4">Marketing Strategy</h3>
                <p class="text-[#D8D6D6] text-[16px]">We develop comprehensive strategies for companies, including
                    vision, mission, market research, and actionable plans to drive growth.</p>
            </div>
            <div class="ourServices ">
                <h3 class="sm:text-2xl text-xl pb-4">Positioning Strategy</h3>
                <p class="text-[#D8D6D6] text-[16px]">We craft personalized positioning strategies to establish your
                    unique identity, build authority, and connect with your ideal audience.</p>
            </div>
            <div class="ourServices ">
                <h3 class="sm:text-2xl text-xl pb-4">Content Creation</h3>
                <p class="text-[#D8D6D6] text-[16px]">We produce engaging ghostwriting, copywriting, video content,
                    photoshoots, and reels for personal brands and companies to captivate and inspire.</p>
            </div>
            <div class="ourServices">
                <h3 class="sm:text-2xl text-xl pb-4">Branding and Design</h3>
                <p class="text-[#D8D6D6] text-[16px]">We create compelling visual identities, logos, and brand designs
                    that reflect the essence and values of your company.</p>
            </div>
        </div>
    </section>

    <section class="max-w-[1440px] mx-auto bg-[#000] ">

        <div class="trusted-clients flex flex-col text-center gap-10 pt-24 pb-10 px-4">
            <h1 class="xl:text-5xl lg:text-4xl text-3xl font-bold">OUR CLIENTS</h1>
            <p class="text-sm md:text-xl">Our clients are our top priority, and we are committed to providing them with
                the high level of service</p>
        </div>
        <ClientSlider/>
    </section>
    <section class="py-10 max-w-[1440px] pb-4 mx-auto bg-[#000]">
        <h1 class="text-center sm:py-10 py-5 xl:text-5xl lg:text-4xl text-3xl font-bold">CUSTOMER REVIEWS</h1>
        <ReviewSlider client:only="react"/>
    </section>

    <section class="max-w-[1440px] py-8 mx-auto bg-[#000]">
        <div class="flex flex-col items-center justify-center w-[90%] mx-auto border-[#785B55] border-2 rounded-md p-3 gap-3 md:w-[80%] md:py-8">
            <h2 class="font-semibold md:text-4xl text-xl text-center">Define your personal branding strategy with
                LEADIN</h2>
            <div class="md:w-[60%] w-[90%]">
                <GetStartedPopUp buttonText="Get Started" style={{
                    width: '100%',
                    border: '1px solid none',
                    color: '#FFF',
                    padding: '10px',
                }} client:only="react"/>
            </div>
        </div>
    </section>


    <section class="max-w-[1440px] mx-auto ">
        <div class="sm:flex sm:flex-row hidden bg-[#000] pt-10">
            <div class="basis-3/10 w-full flex flex-col ">
                <div class="bg-[#EDE5D9] basis-1/2 h-full text-[#191718] flex  items-center lg:px-10 px-5 xl:text-base lg:text-sm sm:text-xs">
                    <p>Building a personal brand helps professionals establish
                        themselves as thought leaders, enhancing their visibility and authority in their industries.</p>
                </div>
                <div class="bg-[#28241D] basis-1/2 h-full flex items-center lg:px-12 px-6 xl:text-base lg:text-sm sm:text-xs">
                    <p>We believe that personal branding is an intimate
                        exploration of an individual's essence, encompassing their emotions, fears, and aspirations.</p>
                </div>
            </div>
            <div class="basis-3/10 w-full">
                <img alt="HomeStaticImg" class="flex-shrink-0 min-w-full min-h-full" src="staticImg.png">
            </div>
            <div class="basis-4/10  flex flex-col">
                <div class="bg-[#E0D3BD] basis-1/2 h-full text-right xl:text-6xl/[8vh] lg:text-5xl/[6vh] md:text-4xl/[5vh] text-3xl/10  text-[#191718] p-10">
                    <p class="font-bold xl:ml-40 sm:ml-20">Why Start Building Your Personal Brand With Us?</p>
                </div>
                <div class="w-full flex flex-row basis-1/2 h-full">
                    <div class="basis-7/16 h-full bg-[#B19482] flex items-start p-5 pt-20 xl:text-base lg:text-sm sm:text-xs">
                        <p>Personal brands increase credibility, with
                            professionals who actively build their brands seen as more knowledgeable and
                            approachable.</p>
                    </div>
                    <div class="basis-9/16 h-full bg-[#000] flex items-end p-5 pb-20 xl:text-base lg:text-sm sm:text-xs">
                        <p> Our unique approach combines psychological insight,
                            content strategy, and expert guidance to craft a personal brand that is deeply authentic and
                            compelling.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="flex flex-col sm:hidden">
            <div class="text-right bg-[#EED9C4] p-10 pl-14">
                <h2 class="text-[#191718] text-3xl/10 font-bold">Why Start Building Your Personal Brand With Us?</h2>
                <p class="text-[#000] text-sm/6 ml-6">Personal brands increase credibility, with professionals who
                    actively build their brands seen as more knowledgeable and approachable.</p>
            </div>
            <div>
                <img class="flex-shrink-0 min-w-full min-h-full" alt="HomeStaticImg" src="staticImg.png">
            </div>
            <div class="p-10 bg-[#E0D3BD]">
                <p class="text-[#191718] ">Our expertise in personal branding, marketing, and design ensures excBuilding
                    a personal brand helps professionals establish themselves as thought leaders, enhancing their
                    visibility and authority in their industries.eptional results tailored to your unique needs.</p>
            </div>
            <div class="bg-[#B19482] text-right p-10 py-20">
                <p>We believe that personal branding is an intimate exploration of an individual's essence, encompassing
                    their emotions, fears, and aspirations.
                </p>
            </div>
        </div>

    </section>
    <!--Contact us-->
    <section class="w-full  py-12 px-4 bg-[#191718]">
        <div class=" max-w-[1440px] mx-auto">
            <header class="text-center">
                <h2 class="sm:p-12 p-8 xl:text-5xl lg:text-4xl text-3xl font-bold">CONTACT US</h2>
            </header>
            <div class="contact-conteiner flex sm:flex-row flex-col-reverse gap-20 px-10">
                <div class="contact-href  flex flex-1 flex-col sm:gap-8 gap-2">
                    <h3 class="sm:text-4xl text-2xl py-4">Do you have any questions?</h3>
                    <SocialHref/>
                    <SubscribePopUp style={{width: '100%', borderRadius: '6px'}} client:visible/>
                </div>
                <div class="contact-send flex flex-1 flex-col">
                    <h3 class="sm:text-4xl text-2xl py-4">Get in touch</h3>
                    <GetInTouch client:visible />
                    <div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <section class="w-full py-16 px-4 sm:px-6 lg:px-8 bg-[#FFF] ">
        <div class="max-w-[1440px] mx-auto">
            <h1 class="font-bold  text-[40px] text-black text-center mb-10 lg:mb-20">JOIN US</h1>
            <Vacancies client:only="react"/>
        </div>

    </section>
</BaseLayout>