import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
// import openGraphImage from '../../public/logos/navLogo.svg'

interface Props {
    title: string;
    description?: string;
    image?: string;
    canonicalURL?: string;
    type?: 'website' | 'article';
}

const {
    title,
    description = `LEADIN transforms professionals into recognized industry leaders through strategic personal branding, digital positioning, and authentic storytelling. Elevate your professional identity today.`,
    image = "/logos/navLogo.svg",
    canonicalURL = 'http://leadin.agency' + Astro.url.pathname,
    type = "website",
} = Astro.props;

console.log(Astro.url.pathname)
