//     : new URL(image, Astro.site || Astro.url.origin).href;
//
const openGraphImage = '/logos/navLogo.svg';

// Generate manifest data
const manifestJSON = JSON.stringify({
    name: title,
    short_name: "LEADIN",
    description: description,
    start_url: "/",
    display: "standalone",
    background_color: "#151515",
    theme_color: "#151515",
    icons: [
        {
            src: "/favicon/favicon-180.svg",
            sizes: "180x180",
            type: "image/svg+xml"
        },
        {
            src: "/favicon/favicon-32.svg",
            sizes: "32x32",
            type: "image/svg+xml"
        },
        {
            src: "/favicon/favicon-16.svg",
            sizes: "16x16",
            type: "image/svg+xml"
        }
    ]
});

// Create a dynamic manifest route
const dynamicManifest = `/site-${encodeURIComponent(title.substring(0, 20))}.webmanifest`;
