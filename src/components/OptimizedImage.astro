---
// OptimizedImage.astro
import { Image } from 'astro:assets';

interface Props {
    src: string;
    alt: string;
    width?: number;
    height?: number;
    class?: string;
    format?: 'avif' | 'webp' | 'png' | 'jpeg';
    quality?: number;
    loading?: 'lazy' | 'eager';
}

const {
    src,
    alt,
    width,
    height,
    class: className = '',
    format = 'webp',
    quality = 80,
    loading = 'lazy'
} = Astro.props;
---

<Image
        src={src}
        alt={alt}
        width={width}
        height={height}
        class={className}
        format={format}
        quality={quality}
        loading={loading}
/>